                                    <input type="text" name="full_name" id="" class="form-control" value="<%=user[0].full_name%>" required>
                                </div>
                                <br>
                                <div class="form-group">
                                    <input type="tel" name="phone" id="" class="form-control" value="<%=user[0].phone%>" maxlength="13" minlength="10" readonly>
                                </div>
                                <br>
                                <div class="form-group"  style="text-align: left">
                                    <select class="form-control" name="state" id="state">
