                                        <% } %>
                                    </select>
                                </div>
                                <br>
                                <div class="form-group"  style="text-align: left">
                                    <select class="form-control" name="city" id="city">
                                        <option value="<%=user[0].city%>"><%= user[0].city %></option>
                                    </select>
                                </div>
                                <br>
                                <button type="submit" class="btn btn-primary" style="background-color: #ED3237;border: 0;width: 100%">
                                    Save
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
