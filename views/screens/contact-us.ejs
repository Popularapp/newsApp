<%- include('../navigation/header') %>
<body>
<header>
    <nav class="navbar navbar-expand-lg">
        <div class="row" style="width:100%;margin: 0;height: 48px">
            <div class="col-lg-3 col-6" >
                <a class="navbar-brand" href="/news"><img src="http://admin.<%= website %>/logo/<%= logo[0].path %>" alt="" style="height: 32px;margin-top: 10px"></a>
            </div>
            <div class="col-lg-5 col-2"></div>
            <div class="col-lg-4 col-4">
                <div class="row icons" style="text-align: center;overflow: hidden">
                    <div class="col-4">
                        <h5>
                            <a href="#career" data-bs-toggle="modal" style="text-decoration: none">
                                <i class="fas fa-user-tie"></i>&nbsp;&nbsp;<b id="carrer">संवादाता</b>
                            </a>

                        </h5>
                    </div>
                    <div class="col-4">
                        <h5>
                            <a href="/epaper" style="text-decoration: none">
                                <i class="far fa-newspaper"></i>&nbsp;&nbsp;<b id="epaper">ई-पेपर</b>
                            </a>
                        </h5>
                    </div>
                    <div class="col-4">
                        <%if(logged_in == 0){%>
                            <h5>
                                <a href="/login" style="text-decoration: none">
                                    <i class="fas fa-user-circle"></i>&nbsp;&nbsp;<b id="log-in">लॉग इन</b>
                                </a>
                            </h5>
                        <%} else {%>
                            <h5>
                                <a href="#user-menu" data-bs-toggle="modal" style="text-decoration: none;">
                                    <i class="fas fa-user-circle"></i>&nbsp;&nbsp;<b id="log-in">अकाउंट</b>
                                </a>
                            </h5>

                            <div class="modal fade" id="user-menu" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="background-color: rgba(0,0,0,0.5)">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <ul class="list-group">
                                                <li class="list-group-item" onclick="window.location.href ='/user-profile'">
                                                    <a href="/user-profile" style="color: #1c1c1c">User Profile</a>
                                                </li>
                                                <li class="list-group-item" onclick="window.location.href ='/logout'">
                                                    <a href="/logout" style="color: #1c1c1c">Logout</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <%}%>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="modal fade" id="career" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" style="background-color: rgba(0,0,0,0.5);z-index: 9999999999">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">करियर</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-6" style="text-align: center">
                        <a href="http://admin.<%= website %>/login" style="color: white" class="btn btn-primary">संवादाता लॉगिन</a>
                    </div>
                    <div class="col-6" style="text-align: center">
                        <a href="http://admin.<%= website %>/career" style="color: white" class="btn btn-danger">संवादाता  रजिस्टर  करें!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br><br>
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <h1><b>Contact Us</b></h1>
            <h5 style="color: #797979;margin-top: 20px">Reach us by any method</h5>
            <hr>
            <div class="row">
                <div class="col-lg-2 col-md-12" style="text-align: center;">
                    <h1 style="margin-top: 10px;color: #ED3237"><i class="fas fa-envelope"></i></h1>
                </div>
                <div class="col-lg-10 col-md-12">
                    <p><b>Mail to:</b></p>
                    <h5><%= website %>@gmail.com</h5>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-2 col-md-12" style="text-align: center;">
                    <h1 style="margin-top: 10px;color: #ED3237"><i class="fas fa-phone"></i></h1>
                </div>
                <div class="col-lg-10 col-md-12">
                    <p><b>Call Us:</b></p>
                    <h5>902-412-3007</h5>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-4">
                    <p style="margin-top: 12px"><b>Follow Us:</b></p>
                </div>
                <div class="col-2">
                    <a href="#"><h3 style="margin-top: 10px;color: #ED3237"><i class="fab fa-facebook-f"></i></h3></a>
                </div>
                <div class="col-2">
                    <a href="#"><h3 style="margin-top: 10px;color: #ED3237"><i class="fab fa-instagram"></i></h3></a>
                </div>
                <div class="col-2">
                    <a href="#"><h3 style="margin-top: 10px;color: #ED3237"><i class="fab fa-twitter"></i></h3></a>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <h4 style="margin-top: 10px"><b>Feedback Form</b></h4>
            <form action="mailto:<%= website %>@gmail.com" enctype="text/plain">
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Enter Your Name" style="margin-top: 10px" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="">Phone Number</label>
                    <input type="tel" class="form-control" name="phone" style="margin-top: 10px" placeholder="Enter Your Phone Number" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="">Message</label>
                    <textarea class="form-control" name="message" id="" cols="30" rows="5" style="margin-top: 10px"></textarea>
                </div>
                <br>
                <button type="submit" class="btn btn-primary" style="border: 0;background-color: #ED3237">Send Message</button>
            </form>
        </div>
    </div>
    <br><br><br>
</div>

